<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nearestin_commons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nothi.androidamenities.NearestinCommons">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:id="@+id/printerlistview"
            android:background="@android:color/holo_green_light" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/dataprogressBar" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <Button
                android:text="wc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wc1" />

            <Button
                android:text="wc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wc2" />

            <Button
                android:text="wc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wc3" />

            <Button
                android:text=" floor plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wcfloor"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textStyle="normal|italic"
                android:elevation="19dp"
                android:background="@android:color/holo_green_light" />
        </LinearLayout>

        <TextView
            android:text="wc118, pages 247, busy."
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:id="@+id/status" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <EditText
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text="add new printer csv: room, description "
                android:ems="10"
                android:id="@+id/newprinterinput" />

            <Button
                android:text="Add Printer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addPrbt"
                android:layout_weight="0.36"
                android:background="@color/colorPrimary" />

            <Button
                android:text="Remove Printer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/removePrbt"
                android:layout_weight="0.74"
                android:background="@android:color/holo_red_dark" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
